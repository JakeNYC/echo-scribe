                    span Babak Keyvani
                    span.mdl-list__item-sub-title babak@keyvani.com
                  span.mdl-list__item-secondary-content
                    a.mdl-list__item-secondary-action(href='#')
                      i.material-icons more_vert
                li.mdl-list__item.mdl-list__item--two-line
                  span.mdl-list__item-primary-content
                    i.mdl-list__item-avatar
                      img(src='img/user_joe.png', alt='Joe Guerra')
                    span Joe Guerra
                    span.mdl-list__item-sub-title joseph.j.guerra@gmail.com
                  span.mdl-list__item-secondary-content
                    a.mdl-list__item-secondary-action(href='#')
                      i.material-icons more_vert
                li.mdl-list__item.mdl-list__item--two-line
                  span.mdl-list__item-primary-content
                    i.mdl-list__item-avatar
                      img(src='img/user_alfonso.png', alt='Alfonso Cabrera')
                    span Alfonso Cabrera
